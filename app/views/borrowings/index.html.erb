<div class="main container">
  <% if @items.any? %>
    <% @items.each do |item| %>
      <div class="col-md-4 col-sm-6">
        <%= image_tag item.image.url(:medium) %>
        <div>
          <%= item.name %>
          <% if item.request %>
          <%= item.request.user.name %> has requested this item
          <%= link_to "Transfer item", item_path(item), method: :put%>
          <%= link_to "Decline", item_request_path(item, item.request), method: :delete %>
          <% end %>
        </div>
      </div>
    <% end %>
  <% else %>
    <strong>You are not currently borrowing anything</strong>
  <% end %>
</div>
