<div class="main container">
  <%= form_for @item, html: {multipart: true} do |f| %>
  <div class="titles">
    <h2> Add item </h2>
    <h4>Donate to the Makers Library!</h4>
  </div>
    <div class="form-group">
      <%= f.text_field :name, class: "form-control", placeholder: 'Name your item' %>
    </div>
    <div class="form-group">
        <!-- <%= f.file_field :image %> -->
        <input type="file" name="item[image]" id="item_image">
    </div>
      <%= f.submit 'Add item', class: "btn btn-primary btn-lg"  %>
  <% end %>
</div>
