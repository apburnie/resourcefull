<div class="main container">
  <h2> Add an item </h2>
  <%= form_for @item, html: {multipart: true} do |f| %>
    <div class="form-group">
      <%= f.text_field :name, class: "form-control", placeholder: 'Name your item' %>
    </div>
    <div class="form-group">
      <%= f.file_field :image %>
    </div>
      <%= f.submit 'Add item', class: "btn btn-primary btn-lg"  %>
  <% end %>
</div>
